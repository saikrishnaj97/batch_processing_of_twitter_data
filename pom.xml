        <!--<executions>-->
        <!--<execution>-->
        <!--<id>make-assembly</id>-->
        <!--<phase>package</phase>-->
        <!--<goals>-->
        <!--<goal>single</goal>-->
        <!--</goals>-->
        <!--</execution>-->
        <!--</executions>-->
        <!--</plugin>-->
    </plugins>
    <resources>
        <resource>
            <directory>src/main/resource</directory>
        </resource>
    </resources>

</build>



</project>